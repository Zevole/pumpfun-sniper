<Window x:Class="PumpFunSniper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PumpFun Sniper" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="StatusText" Text="Статус: Ожидание подключения..." Margin="10" FontWeight="Bold"/>
        <DataGrid x:Name="TokenGrid" Grid.Row="1" AutoGenerateColumns="True" Margin="10" ItemsSource="{Binding Tokens}"/>
    </Grid>
</Window>